---
import BlogCard from './BlogCard.astro'

type Props = {
  limit?: number
}

const { limit } = Astro.props

let posts = await Astro.glob('../pages/blog/*.md')
posts = posts.filter((post) => !post.frontmatter.draft)
posts = posts.sort(
  (a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()
)

if (limit) posts = posts.slice(0, limit)
---

<div class={`flex w-full flex-wrap gap-4 `}>
  {
    posts.length < 1 ? (
      <h2 class="mt-6 text-center text-8xl text-[#6d6d8e]">Coming Soon</h2>
    ) : (
      <div class={`mt-12 flex w-full flex-col gap-y-16 md:flex-row md:flex-wrap`}>
        {posts.map((post) => {
          const { title, img, date, description } = post.frontmatter
          const url = post.url

          post.frontmatter.de

          return (
            <BlogCard
              title={title}
              img={img}
              comment="Nodejs, TypeScript, Sharp"
              description={description}
              link={url}
              date={date}
            />
          )
        })}
      </div>
    )
  }
</div>
