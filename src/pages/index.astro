---
import { Sprite } from 'astro-icon';
import BaseLayout from '../layouts/BaseLayout.astro';
import PorjectCard from '../components/ProjectCard.astro';
import BlogPostList from '../components/BlogPostList.astro';
import ContactForm from '../components/ContactForm.astro';
import CTA from '../components/CTA.astro';
---

<BaseLayout>
  <>
    <header
      id="hello"
      class="flex items-center flex-col-reverse md:flex-row w-full"
    >
      <div class="flex-1 mt-10 w-full">
        <p class="text-lg font-medium">Hi all, I am</p>
        <h1>Tim Neubauer</h1>
        <h2 class="text-gradient subheading">&gt; Full-Stack Engineer</h2>
        <div class="font-medium mt-9 flex flex-col space-y-1">
          <p class="comment">// some personal data</p>
          <p>
            <span class="text-[#4D5BCE]">let</span>
            <span class="text-[#43D9AD]">age</span> =
            <span class="text-[#E99287]">23</span>
          </p>
          <p>
            <span class="text-[#4D5BCE]">let</span>
            <span class="text-[#43D9AD]">location</span> =
            <span class="text-[#E99287]">"Greifswald, Germany"</span>
          </p>
          <p class="comment pt-4">// a list of my social links</p>
          <p>
            <span class="text-[#4D5BCE]">const</span>
            <span class="text-[#43D9AD]">githubLink</span> =
            <a class="text-[#E99287]" href="https://github.com/devtimnbr"
              >“https://github.com/devtimnbr”</a
            >
          </p>
          <p>
            <span class="text-[#4D5BCE]">const</span>
            <span class="text-[#43D9AD]">twitterLink</span> =
            <a href="https://twitter.com/_tndev" class="text-[#E99287]"
              >“https://twitter.com/_tndev”</a
            >
          </p>

          <CTA />
        </div>
      </div>
      <div class="flex-1 flex justify-center items-center">
        <img src="/Group.svg" />
      </div>
    </header>
    <section id="about" class="flex items-center flex-col-reverse md:flex-row">
      <div class="flex-1 flex justify-center items-center">
        <div class="flex flex-wrap showcase gap-16 mt-12 justify-center">
          <Sprite name="vscode-icons:file-type-html" />
          <Sprite name="vscode-icons:file-type-css" />
          <Sprite name="logos:javascript" />
          <Sprite name="logos:typescript-icon" />

          <Sprite name="logos:react" />
          <Sprite name="logos:nodejs-icon" />
          <Sprite name="vscode-icons:file-type-tailwind" />
          <Sprite name="logos:cloudflare" />

          <Sprite name="logos:remix-icon" />
          <Sprite name="vscode-icons:file-type-astro" />
          <Sprite name="logos:postgresql" />
          <Sprite name="logos:docker-icon" />

          <Sprite name="logos:git-icon" />

          <Sprite name="logos:metamask-icon" />
          <Sprite name="logos:hardhat-icon" />
          <Sprite name="cib:bitcoin" class="text-[#f2a900]" />
        </div>
      </div>
      <div class="flex-1">
        <h3 class="text-4xl font-medium">_about-me</h3>
        <p class="comment mt-2">// get a small overview of who am i</p>
        <p class="mt-9">
          I'm a software engineer based in Greifswald, Germany and also a
          communication and journalism student. I enjoy creating things that
          live on the internet, whether that be websites, applications, or
          anything in between. I have been freelancing for a year now while
          studying at the university and I've manage to gain a decent amount of
          experience and valuable knowledge from all different kinds of fields
          throughout my projects/work.
        </p>
        <CTA />
      </div>
    </section>
    <section id="projects" class="flex flex-col">
      <h3 class="text-4xl font-medium">_projects</h3>
      <div>
        <div
          id="projects-list"
          class="flex flex-col justify-between w-full mt-12"
        >
          <PorjectCard
            link="https://niftyprintery.com"
            img="/niftyprintery.png"
            title="Niftyprintery"
            comment="Remix, Fly.io, Docker, Sqlite"
            description="Siom stands for sharp image optimizer microservice and explains itself. It is used to resize images on the fly, convert images to webp and is very powerful behind a cache proxy like Choxy."
          />
          <PorjectCard
            right
            img="https://i.ytimg.com/vi/48NWaLkDcME/maxresdefault.jpg"
            link="https://github.com/devtimnbr/choxy"
            title="Choxy"
            comment="Cloudflare Workers, TypeScript, Hono"
            description="Choxy is a cloudflare workers cache proxy built on top of hono. It is usefull to cache external and optimized images, google fonts or all kinds of web requests."
          />
          <PorjectCard
            img="https://repository-images.githubusercontent.com/12226786/cf816100-9a08-11ea-8fc1-7af9d4bcbf9e"
            link="https://github.com/devtimnbr/siom"
            title="Siom"
            comment="Nodejs, TypeScript, Sharp, Docker"
            description="Siom stands for sharp image optimizer microservice and explains itself. It is used to resize images on the fly, convert images to webp and is very powerful behind a cache proxy like Choxy."
          />
          <PorjectCard
            right
            img="data:image/png;base64,"
            title="DeFi dApp built on Avalenche"
            comment="Next.js, TypeScript, Ethers, Vercel"
            description="Siom stands for sharp image optimizer microservice and explains itself. It is used to resize images on the fly, convert images to webp and is very powerful behind a cache proxy like Choxy."
          />
          <PorjectCard
            class=""
            img="https://block-builders.de/wp-content/uploads/2021/09/Solana-thmp-678x381.png"
            title="NFT and dApp development on Solana Chain"
            comment="Next.js, TypeScript, CandyMachine, Cloudflare"
            description="Siom stands for sharp image optimizer microservice and explains itself. It is used to resize images on the fly, convert images to webp and is very powerful behind a cache proxy like Choxy."
          />
        </div>
        <CTA center />
      </div>
    </section>
    <section id="blog" class="flex flex-col items-center justify-center">
      <h3 class="text-4xl font-medium">_blog</h3>
      <!--      <div
        class={`flex w-full mt-12 gap-4 ${
          posts.length < 2 ? 'justify-center' : 'justify-between'
        }`} >-->

      <BlogPostList limit={3} />

      <a href="/blog/" class="btn-primary mt-12 block">See more blog posts</a>
    </section>
    <section id="contact">
      <ContactForm />
    </section>
  </>
</BaseLayout>
