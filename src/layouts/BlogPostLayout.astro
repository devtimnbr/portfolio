---
import type { MarkdownLayoutProps } from "astro";
import ContactForm from "../components/ContactForm.astro";
import BaseLayout from "./BaseLayout.astro";

type Props = MarkdownLayoutProps<{
  // Define frontmatter props here
  title: string;
  author: string;
  date: string;
  img: string;
  description: string;
}>;

export type BlogProps = Props;

const { frontmatter } = Astro.props;
---

<head>
  <title>{frontmatter.title}</title>
  <meta name={frontmatter.description} />
</head>

<script>
  let copyButtonLabel = "Copy Code";
  let codeBlocks = Array.from(document.querySelectorAll("pre"));

  for (let codeBlock of codeBlocks) {
    let wrapper = document.createElement("div");
    wrapper.style.position = "relative";

    let copyButton = document.createElement("button");
    copyButton.className = "copy-code";
    copyButton.innerHTML = copyButtonLabel;

    codeBlock.setAttribute("tabindex", "0");
    codeBlock.appendChild(copyButton);
    // wrap codebock with relative parent element
    codeBlock.parentNode.insertBefore(wrapper, codeBlock);
    wrapper.appendChild(codeBlock);

    copyButton.addEventListener("click", async () => {
      await copyCode(codeBlock, copyButton);
    });
  }

  async function copyCode(block, button) {
    let code = block.querySelector("code");
    let text = code.innerText;

    await navigator.clipboard.writeText(text);

    // visual feedback that task is completed
    button.innerText = "Code Copied";

    setTimeout(() => {
      button.innerText = copyButtonLabel;
    }, 700);
  }
</script>

<BaseLayout>
  <div class="max-w-xl lg:max-w-3xl mx-auto blog">
    <h1>{frontmatter.title}</h1>
    <p class="mt-4 text-xs">Written on: {frontmatter.date}</p>
    <p class="mt-4">{frontmatter.description}</p>

    <img
      src={frontmatter.img}
      class="rounded-md h-1/6 mt-12 w-full object-cover mb-12"
    />

    <!-- <div class="blog"> -->
    <slot />
    <!-- </div> -->
  </div>
  <div class="mt-20">
    <ContactForm />
  </div>
</BaseLayout>
